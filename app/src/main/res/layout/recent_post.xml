<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/holo_red_light"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_textView_recentPost"
        android:gravity="center_horizontal"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:text="Voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/othersLayout_recentPost"
        android:layout_below="@+id/title_textView_recentPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/recent_title_textView_recentPost"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="@android:color/primary_text_light"
            android:text="Recent Posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
    <ListView
        android:id="@+id/listView_recentPost"
        android:layout_below="@+id/othersLayout_recentPost"
        android:layout_width="match_parent"
        android:background="#f6dcdc"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>