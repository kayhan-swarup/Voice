    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email:"
        android:id="@+id/email_userDialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/sexTextView_userDialog"
        android:layout_below="@+id/email_userDialog"
        android:text="SEX:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/list_userDialog"
        android:id="@+id/profile_pic_userDialog"
        android:background="@drawable/profilepic"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/my_posts_title_userDialog"
        android:textSize="30sp"
        android:layout_below="@+id/sexTextView_userDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        />
    <ListView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/my_posts_title_userDialog"
        android:id="@+id/list_userDialog"
        android:layout_width="match_parent"

        android:background="#f6dcdc"
        android:layout_height="300dp"
        >

    </ListView>

    <Button
        android:id="@+id/follow_button_userDialog"
        android:text="FOLLOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/list_userDialog"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/back_button_userDialog"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_userDialog"
        />


</RelativeLayout>